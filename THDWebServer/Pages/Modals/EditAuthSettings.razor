        </div>
        <div class="row">
            <div class="col-md-4 align-items-center d-flex">
                <RadzenLabel Text="@LM.Get("wsAuthGenColNameAuthCheckIntervalMinutes")" />
            </div>
            <div class="col-md-8">
                <RadzenNumeric @bind-Value="SettingsManager.Settings.WebAuthModule.AuthCheckIntervalMinutes" TValue="int" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 align-items-center d-flex">
                <RadzenLabel Text="@LM.Get("wsAuthGenColNameAuthTakeNumberOfUsersPerPass")" />
            </div>
