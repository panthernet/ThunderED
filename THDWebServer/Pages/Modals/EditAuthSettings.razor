                <RadzenLabel Text="@LM.Get("wsAuthGenColNameAuthButtonDiscordText")" />
            </div>
            <div class="col-md-8">
                <RadzenTextBox @bind-Value="SettingsManager.Settings.WebAuthModule.AuthButtonDiscordText" />
